@model PresentationLayer.Models.EmployeeViewModel
@{
    ViewBag.Title = "Edit";
}
    <!-- BOOTSTRAP STYLES-->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
<link href="~/assets/css/registration.css" rel="stylesheet" />
    <div id="wrapper">
     <div>
       @Html.Partial("~/Views/Shared/navigator.cshtml")                
     </div>
     <div id="page-wrapper">
            <div id="page-inner">
<h2>Edit</h2>
@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{ 
    
            @Html.HiddenFor(x=>x.EmployeeId)
                
                @Html.LabelFor(x=> x.Department)
                @Html.EditorFor(x=> x.Department)
            
                @Html.LabelFor(x=> x.FirstName)
                @Html.EditorFor(x=> x.FirstName)
            
                @Html.LabelFor(x=> x.MiddleName)
                @Html.EditorFor(x=> x.MiddleName)
            
                @Html.LabelFor(x=> x.LastName)
                @Html.EditorFor(x=> x.LastName)
            
                @Html.LabelFor(x=> x.Phone)
                @Html.EditorFor(x=> x.Phone)
            
                @Html.LabelFor(x=> x.Address)
                @Html.EditorFor(x=> x.Address)
           
                @Html.LabelFor(x=> x.Position)
                @Html.EditorFor(x=> x.Position)
            
                @Html.LabelFor(x=> x.Gender)
                @Html.EditorFor(x=> x.Gender)
            
                @Html.LabelFor(x=> x.HiredDate)
                @Html.EditorFor(x=> x.HiredDate)
            
                @Html.LabelFor(x=> x.ResignationDate)
                @Html.EditorFor(x=> x.ResignationDate)
           
                    <button type="submit">Update Emplotee</button>
          
            
}
                </div>
         </div>
        </div>
