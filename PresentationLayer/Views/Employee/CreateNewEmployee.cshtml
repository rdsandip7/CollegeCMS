@model PresentationLayer.Models.EmployeeViewModel
@{
    ViewBag.Title = "CreateNewEmployee";
}
    <!-- BOOTSTRAP STYLES-->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
<link href="~/assets/css/registration.css" rel="stylesheet" />
    <div id="wrapper">
     <div>
       @Html.Partial("~/Views/Shared/navigator.cshtml")                
     </div>
     <div id="page-wrapper">
            <div id="page-inner">
@using (Html.BeginForm("SaveEmployee", "Employee", FormMethod.Post))
{ 
    <h2>Form To Create New Employee</h2>
    
                @Html.LabelFor(x=> x.Department)
                @Html.DropDownListFor(x=> x.Department, new SelectList(ViewBag.departmentNames))
            
                @Html.LabelFor(x=> x.FirstName)
                @Html.EditorFor(x=> x.FirstName)
           
                @Html.LabelFor(x=> x.MiddleName)
                @Html.EditorFor(x=> x.MiddleName)
            
                @Html.LabelFor(x=> x.LastName)
                @Html.EditorFor(x=> x.LastName)
            
                @Html.LabelFor(x=> x.Phone)
                @Html.EditorFor(x=> x.Phone)
            
                @Html.LabelFor(x=> x.Address)
                @Html.EditorFor(x=> x.Address)
            
                @Html.LabelFor(x=> x.Email)
                @Html.EditorFor(x=> x.Email)
            
                @Html.LabelFor(x=> x.Position)
                @Html.EditorFor(x=> x.Position)
            
                @Html.LabelFor(x=> x.Gender)
                @Html.EditorFor(x=> x.Gender)
            
                @Html.LabelFor(x=> x.HiredDate)
                @Html.EditorFor(x=> x.HiredDate)
            
                @Html.LabelFor(x=> x.ResignationDate)
                @Html.EditorFor(x=> x.ResignationDate)
          
                    <button type="submit">Create New Emplotee</button>
                
            
            
}
                </div>
         </div>
        </div>
<!-- JQUERY SCRIPTS -->
    <script src="~/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/assets/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/assets/js/custom.js"></script>