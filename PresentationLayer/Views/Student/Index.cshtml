<!DOCTYPE html>
@model PagedList.IPagedList<PresentationLayer.Models.StudentViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Sutednts";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
        <!-- BOOTSTRAP STYLES-->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
<link href="~/assets/css/registration.css" rel="stylesheet" />
            
</head>
<body>
    <div id="wrapper">
     <div>
       @Html.Partial("~/Views/Shared/navigator.cshtml")                
     </div>
     <div id="page-wrapper">
            <div id="page-inner">
             @using (Html.BeginForm("Index", "Student", FormMethod.Get))
             {    
                 <p> 
                   Find By Name:  @Html.TextBox("SearchString",ViewBag.currentFilter as string)  
                 <input type="submit" value="Search" /></p> 
             }
                <div>
                    <table>
                        <thead>
                
                                <th>@Html.ActionLink("First Name", "Index", "Student", new { sortOrder=ViewBag.FirstNameSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Middle Name", "Index", "Student", new { sortOrder=ViewBag.MiddleNameSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Last Name", "Index", "Student", new { sortOrder=ViewBag.LastNameSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Level", "Index", "Student", new { sortOrder=ViewBag.LevelSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Address", "Index", "Student", new { sortOrder=ViewBag.AddressSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Department", "Index", "Student", new { sortOrder=ViewBag.DepartmentSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Gender", "Index", "Student", new { sortOrder=ViewBag.GenderSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                
                                
                            @foreach (var item in Model)
                            { 
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.MiddleName</td>
                                <td>@item.LastName</td>
                                <td>@item.Level</td>
                                <td>@item.Address</td>
                                <td>@item.Department</td>
                               <td>@item.Gender</td>

                                <td>@Html.ActionLink("Edit","Edit","Student", new{StudentId = item.StudentId},"")</td>
                                <td>@Html.ActionLink("Delete","DeleteStudent","Student", new{StudentId = item.StudentId},"")</td>
                
                            </tr>
                            }        
                        </thead>
                    </table>
                    <table>
                        <thead>
                                <th>@Html.ActionLink("Contact", "Index", "Student", new { sortOrder=ViewBag.ContactNumberSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Guardian Name", "Index", "Student", new { sortOrder=ViewBag.GuardianNameSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Guardian Contact", "Index", "Student", new { sortOrder=ViewBag.GuardianContactSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Guardian Relationship", "Index", "Student", new { sortOrder=ViewBag.GuardianRelationSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("Email", "Index", "Student", new { sortOrder=ViewBag.EmailSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                
                                <th>@Html.ActionLink("Citizenship No.", "Index", "Student", new { sortOrder=ViewBag.CitizenshipSortParm ,currenFilter=ViewBag.currentFilter },"")</th>
                                <th>@Html.ActionLink("DOB", "Index", "Student")</th>
                                <th>@Html.ActionLink("Admission", "Index", "Student")</th>
                             @foreach (var item in Model)
                            {
                            <tr>
                                
                                <td>@item.Contact</td>
                                <td>@item.GuardianName</td>
                                <td>@item.GuardianContact</td>
                                <td>@item.GuardianRelationship</td>
                                <td>@item.Email</td>
                                <td>@item.CitizenshipNumber</td>
                                <td>@item.DateOfBirth</td>
                                <td>@item.AdmissionDate</td>
                                 
                                 <td>@Html.ActionLink("Edit","Edit","Student", new{StudentId = item.StudentId},"")</td>
                                <td>@Html.ActionLink("Delete","DeleteStudent","Student", new{StudentId = item.StudentId},"")</td>
                
                            </tr>
                            }    
                        </thead>
                    </table>
                    page @(Model.PageCount<Model.PageNumber?0:
                        Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model,page=>Url.Action
                   ("Index","Department",new {page,sortOrder=ViewBag.currentSort,currentFilter=ViewBag.currentFilter}))
                </div>
             <div class="col-md-4">
                        <div class="btn btn-danger btn-lg btn-block">@Html.ActionLink("Create New Student","CreateNewStudent","Student")</div>
                    </div>
        </div>
    </div>
        </div>
    <!-- JQUERY SCRIPTS -->
    <script src="~/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/assets/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/assets/js/custom.js"></script>
</body>

</html>
